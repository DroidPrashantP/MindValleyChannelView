<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ui.fragment.ChannelScreenFragment">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tb_channelScreen_newEpisodeTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_8dp"
        android:text="@string/new_episodes_label"
        android:textColor="@color/text_secondary_color"
        android:textSize="@dimen/dimen_20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_channelScreen_mainList"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tb_channelScreen_newEpisodeTitle" />

    <View
        android:id="@+id/view_channelScreen_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_pt_5dp"
        android:layout_margin="@dimen/dimen_8dp"
        android:background="@color/text_secondary_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rv_channelScreen_mainList" />

</androidx.constraintlayout.widget.ConstraintLayout>